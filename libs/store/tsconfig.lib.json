{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationDir": "../../dist/types",
        "emitDeclarationOnly": true,
        "types": [
            "node"
        ]
    },
    "files": [
        "../../node_modules/@nrwl/react/typings/cssmodule.d.ts",
        "../../node_modules/@nrwl/react/typings/image.d.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/jest.config.js"
    ],
    "include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ]
}
